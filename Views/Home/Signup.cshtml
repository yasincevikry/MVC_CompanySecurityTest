<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top ">
        <div class="container d-flex align-items-center justify-content-lg-between">

            <h1 class="logo me-auto me-lg-0"><a href="index.html">Company Security Test<span>.</span></a></h1>

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li>
                        @if (Session["email"] != null)
                        {

                        <li>@Html.ActionLink("Profile", "Index", "Profile")</li>
                        <li>@Html.ActionLink("ATT&CK Test", "Index", "MitreAttackTest")</li>
                        <li>@Html.ActionLink("Results", "TestResults", "TestResult")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Home")</li>

                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Home")</li>
                        <li>@Html.ActionLink("Signup", "Signup", "Home")</li>
                    }

                        </li>
                    </ul>
                    <i class="bi bi-list mobile-nav-toggle"></i>
                </nav><!-- .navbar -->

            </div>
        </header><!-- End Header -->

        <section class="h-100" style="background-color: #9A616D;">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col">
                        <div class="card card-registration my-4">
                            <div class="row g-0">
                                <div class="col-xl-6 d-none d-xl-block">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                         alt="Sample photo" class="img-fluid"
                                         style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                                </div>
                                <div class="col-xl-6">
                                    <div class="card-body p-md-5 text-black">
                                        <h3 class="mb-5 text-uppercase">Company Signup Form</h3>
                                        <form action="Signup" method="post">
                                            <div class="row">
                                                <div class="col-md-6 mb-4 form-group">
                                                    <div class="form-outline">
                                                        <input type="text" name="CompanyName" id="txtCompanyName" class="form-control form-control-lg" />
                                                        <label class="form-label" for="txtCompanyName">Company Name</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-4 form-group">
                                                    <div class="form-outline">
                                                        <input type="text" name="CompanyArea" id="txtCompanyArea" class="form-control form-control-lg" />
                                                        <label class="form-label" for="txtCompanyArea">Company Area</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-4 form-group">
                                                    <div class="form-outline">
                                                        <input type="text" id="txtCity" name="CompanyCity" class="form-control form-control-lg" />
                                                        <label class="form-label" for="txtCity">Company City</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-4 form-group">

                                                    <select class="select" name="CompanyCountry" asp-items="Viewbag.Countries" asp-for="CompanyCountry">
                                                        <option disabled value="Country">Country</option>
                                                        <option value="Turkey">Turkey</option>
                                                        <option value="Argentina">Argentina</option>
                                                        <option value="France">France</option>
                                                        <option value="Australia">Australia</option>
                                                        <option value="Brazil">Brazil</option>
                                                        <option value="Bulgaria">Bulgaria</option>
                                                        <option value="China">China</option>
                                                        <option value="Denmark">Denmark</option>
                                                        <option value="Greece">Greece</option>
                                                        <option value="Italy">Italy</option>
                                                        <option value="Portugal">Portugal</option>
                                                    </select>

                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-4 form-group">
                                                    <div class="form-outline">
                                                        <input type="text" name="CompanyDistrict" id="txtCompanyDistrict" class="form-control form-control-lg" />
                                                        <label class="form-label" for="txtCompanyDistrict">Company District</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 mb-4 form-group">
                                                    <div class="form-outline">
                                                        <input type="number" id="txtContact" name="Contact" class="form-control form-control-lg" maxlength="11" />
                                                        <label class="form-label" for="txtContact">Contact</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-outline mb-4 form-group">
                                                <input type="text" name="Description" id="txtDescription" class="form-control form-control-lg" />
                                                <label class="form-label" for="txtDescription">Description</label>
                                            </div>

                                            <div class="form-outline mb-4 form-group">
                                                <input type="email" name="Email" id="txtEmail" class="form-control form-control-lg" />
                                                <label class="form-label" for="txtEmail">E-mail</label>
                                            </div>

                                            <div class="form-outline mb-4 form-group">
                                                <input type="password" name="Password" id="txtPassword" class="form-control form-control-lg" />
                                                <label class="form-label" for="txtPassword">Password</label>
                                            </div>

                                            <div class="d-flex justify-content-end pt-3">
                                                @*<button type="button" class="btn btn-light btn-lg">Reset all</button>*@
                                                <button type="submit" formmethod="post" class="btn btn-warning btn-lg ms-2">Sign Up!</button>

                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>




