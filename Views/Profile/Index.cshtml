                    </ul>
                    <i class="bi bi-list mobile-nav-toggle"></i>
                </nav><!-- .navbar -->

            </div>
        </header><!-- End Header -->

        <br /><br />
        @using (Html.BeginForm("ChangeInformations", "Profile", FormMethod.Post))
        {
            <form action="ChangeInformations" method="post">
                <div class="container rounded bg-white mt-5 mb-5 mx-auto" style="background-color: #9A616D;">
                    <div class="row">

                        <div class="col-md-5 border-right form-group mx-auto">
                            <div class="p-3 py-5">
                                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="~/Gp/assets/img/generaluser.png"></div>
                                <div class="mb-3 text-center">
                                    <h4 class="text-right">Your Company Profile</h4>
                                </div>
                                <div class="row mt-2 ">
                                    <div class="col-md-6 form-group"><label class="labels">Company Name</label>@Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control form-control-lg" , @name="CompanyName"})</div>
                                    <div class="col-md-6 form-group"><label class="labels">Company Area</label>@Html.TextBoxFor(m => m.CompanyArea, new { @class = "form-control form-control-lg", @name = "CompanyArea" })</div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12 form-group"><label class="labels">Company City</label>@Html.TextBoxFor(m => m.CompanyCity, new { @class = "form-control form-control-lg", @name = "CompanyCity" })</div>
                                    <div class="col-md-12 form-group"><label class="labels">District</label>@Html.TextBoxFor(m => m.CompanyDistrict, new { @class = "form-control form-control-lg" , @name = "CompanyDistrict" })</div>
                                    <div class="col-md-12 form-group"><label class="labels">Country</label>@Html.TextBoxFor(m => m.CompanyCountry, new { @class = "form-control form-control-lg", @name = "CompanyCountry" })</div>
                                    <div class="col-md-12 form-group"><label class="labels">Contact</label>@Html.TextBoxFor(m => m.Contact, new { @class = "form-control form-control-lg", @name = "Contact" })</div>
                                    <div class="col-md-12 form-group"><label class="labels">Description</label>@Html.TextBoxFor(m => m.Description, new { @class = "form-control form-control-lg", @name = "Description" })</div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-6 form-group"><label class="labels">Email</label>@Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @name = "Email" })</div>
                                    <div class="col-md-6 form-group"><label class="labels">Password</label>@Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-lg", @name = "Password" })</div>
                                </div>
                                <div class="mt-5 text-center"><button class="btn btn-primary profile-button" formmethod="post" type="submit">Save Profile Info's</button></div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        }




